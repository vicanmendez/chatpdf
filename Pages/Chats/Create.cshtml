@page
@model ChatPDFCom.Pages.Chats.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear un nuevo chat (únicamente para guardarlo en la BD) </h1>

<h4>Chat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Chat.PdfTitle" class="control-label"></label>
                <input asp-for="Chat.PdfTitle" class="form-control" />
                <span asp-validation-for="Chat.PdfTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chat.SourceId" class="control-label"></label>
                <input asp-for="Chat.SourceId" class="form-control" />
                <span asp-validation-for="Chat.SourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chat.Conversation" class="control-label"></label>
                <input asp-for="Chat.Conversation" class="form-control" />
                <span asp-validation-for="Chat.Conversation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chat.CreatedAt" class="control-label"></label>
                <input asp-for="Chat.CreatedAt" class="form-control" />
                <span asp-validation-for="Chat.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
